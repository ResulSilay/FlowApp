<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_dialog_default"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/txt_dialog_message_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        tools:text="do you want to connect"
        android:textAlignment="center"
        android:textColor="?colorAccent"
        android:textSize="21sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_want_accept"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape_radius_button"
        android:backgroundTint="?colorPrimary"
        android:padding="15dp"
        android:text="AGREED"
        android:textColor="#fff"
        android:textSize="15sp" />


    <Button
        android:id="@+id/btn_dialog_messsage_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ONAYLA"
        android:textColor="?colorAccent"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>